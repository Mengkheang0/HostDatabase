<Application x:Class="TestIQ.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TestIQ"
             StartupUri="/Contents/Dashboard.xaml">
    <Application.Resources>
        <Style x:Key="tb" TargetType="TextBlock">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="TextElement.Foreground" Value="LightGray"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextElement.Foreground" Value="Red"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style> 
        
    </Application.Resources>
</Application>
